{
    "compilerOptions": {
      "strictNullChecks": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "module": "ES6",
      "moduleSuffixes": [".tsx", ".jsx", "", ".ts"],
      "target": "es5",
      "allowJs": true,
      "jsx": "preserve",
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "baseUrl":"./",
      "paths": {
        "@/Components/*": ["src/Components/*"],
        "@/Pages/*": ["src/Pages/*"],
        "@/Helpers/*": ["src/Helpers/*"],
        "@/Images/*": ["src/assets/images/*"],
      }
    },
    "include": [
      "./src/**/*.ts",
      "./src/**/*.tsx"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.js",
      "webpack.common.cjs"
    ],
    
    
}